# ============================================================
# Booking Rush - Infrastructure Environment Variables
# ============================================================
# Copy this file to .env and fill in the values

# ----- Server SSH -----
HOST=your-server-ip
SSH_USER=root
TAILSCALE_IP=your-tailscale-ip

# ----- Namespace -----
NAMESPACE=booking-rush

# ============================================================
# Database Credentials (for Helm install)
# ============================================================

# PostgreSQL
PG_USERNAME=postgres
PG_PASSWORD=your-secure-password
PG_DATABASE=booking_rush

# Redis
REDIS_PASSWORD=your-secure-password

# MongoDB
MONGO_USERNAME=booking_user
MONGO_PASSWORD=your-secure-password
MONGO_DATABASE=booking_rush

# ============================================================
# JWT (CHANGE THIS IN PRODUCTION!)
# ============================================================
JWT_SECRET=your-super-secret-jwt-key
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h
JWT_ISSUER=booking-rush

# ============================================================
# GitHub Container Registry
# ============================================================
GHCR_USERNAME=your-github-username
GHCR_TOKEN=your-github-pat-token
